<div class="container">
  <%= render 'shared/header' %>
  </br>
  </br>
  <div class="row">
    <div class="col-lg-12">
      <h2 class= 'float-left'><%= current_user.name %> Assignments!</h2>
    </div>
  </div>
  </br>
  <div class="row">
    <% if @assignments.present? %>
      <table class="table table-bordered table-striped table-hover">
        <thead>
          <tr>
            <th class='text-center'>Title</th>
            <th class='text-center'>Description</th>
            <th class='text-center'>Submit Date</th>
            <th class='text-center'>Uploaded File</th>
            <th class='text-center'>Upload Assignment</th>    
          </tr>
        </thead>
        <% @assignments.each do |assignment| %>
          <tbody>
            <tr>
              <td class='text-center'><%= assignment.title %></td>
              <td class='text-center'><%= assignment.description %></td>
              <td class='text-center'><%= assignment.due_date.strftime('%a %b %Y till %T') %></td>
              <td class='text-center'>
              </td>
              <td class='text-center'>
                <%= form_for :assignment_user, url: upload_file_users_path(assignment_id: assignment), method: :post, html: { class: 'form-horizontal', 'data-parsley-validate': '' } do |f| %>

                  <div class="form-group">
                    <div class="col-sm-12">
                      <%= f.file_field :files, multiple: true, required: true, class: 'form-control' %>
                    </div>
                  </div>
                  <div class="form-group">
                    <div class="col-xs-12">
                      <%= f.submit class: 'btn btn-primary float-left' %>
                    </div>
                <% end %>
              </td>
            </tr>
          </tbody>
        <% end %>
      </table>
    <% else %>
      <h4 class='text-center'>You have not been assigned any assignment yet.</h4>
    <% end %>
  </div>
</div>