<div class="container">
  <%= render 'shared/header' %>
  </br>
  </br>
  <div class="row">
    <div class="col-lg-12">
      <h2 class= 'float-left'><%= current_user.name %> Assignments!</h2>
    </div>
  </div>
  </br>
  <div class="row">
    <% if @assignments.present? %>
      <table class="table table-bordered table-striped table-hover">
        <thead>
          <tr>
            <th class='text-center'>Title</th>
            <th class='text-center'>Description</th>
            <th class='text-center'>Submit Date</th>
            <th class='text-center'>Upload Assignment</th>    
          </tr>
        </thead>
        <% @assignments.each do |assignment| %>
          <tbody>
            <tr>
              <td class='text-center'><%= assignment.title %></td>
              <td class='text-center'><%= assignment.description %></td>
              <td class='text-center'><%= assignment.submit_date.strftime('%a %b %Y till %T') %></td>
              <td class='text-center'><%= link_to 'File', 'javascript:void(0)', class: 'btn btn-secondary' %>
              </td>
            </tr>
          </tbody>
        <% end %>
      </table>
    <% else %>
      <h4 class='text-center'>You have not been assigned any assignment yet.</h4>
    <% end %>
  </div>
</div>